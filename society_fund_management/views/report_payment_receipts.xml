<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="society_fund_management.report_payment_receipts_fund">
      <div class="page">
        <table class="table table-condensed" style="width: 100%;">
          <thead t-if="getHeader(data['form'])">
            <tr style="font-size:15;">
              <th class="text-center" style=" width: 30px;">Date</th>
              <th class="text-right" style="width: 80px;">Lavajam</th>
              <th class="text-right" style="width: 80px;">LAmount.</th>
              <th class="text-right" style="width: 100px;">LInstallment</th>
              <th class="text-right" style="width: 50px;">LPending</th>
              <th class="text-right" style="width: 20px;">Interest</th>
              <th class="text-right" style="width: 20px;">Panelty</th>
              <th class="text-right" style="width: 50px;">Total</th>
              <th class="text-right" style="width: 50px;">TLavajam</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="getPaymentLines(data['form'])" t-as="p">
              <tr t-if="not p['printed']" style="font-size:15;border-top-style:hidden;">
                <td class="text-left" style="width: 30px;"><span t-esc="p['date']"/></td>
                <td class="text-right" style="width: 80px;"><span t-esc="formatLang(p['monthly_amt'])"/>
                  /
                  <span t-esc="p['count_current_scheme']"/></td>
                <td class="text-right" style="width: 80px;"><span t-esc="formatLang(p['loan_amount'])"/></td>
                <td class="text-right" style="width: 100px;"><span t-esc="formatLang(p['loan_emi'])"/>
                  /
                  <span t-esc="p['count_emi_current']"/></td>
                <td class="text-right" style="width: 50px;"><span t-esc="formatLang(p['loan_remaining'])"/></td>
                <td class="text-right" style="width: 20px;"><span t-esc="formatLang(p['monthly_int'])"/></td>
                <td class="text-right" style="width: 20px;"><span t-esc="formatLang(p['total_panalty'])"/></td>
                <td class="text-right" style="width: 50px;"><span t-esc="formatLang(p['total_payment'])"/></td>
                <td class="text-right" style="width: 50px;"><span t-esc="formatLang(p['paid_amount'])"/></td>
              </tr>
              <tr t-if="p['printed']" style="font-size:15;border-top-style:hidden;">
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
                <td>&amp;nbsp;</td>
              </tr>
            </t>
          </tbody>
        </table>
      </div>
    </template>
    <report id="report_payment_receipts" string="Payment Receipts" menu="False" model="res.partner" report_type="qweb-pdf" file="society_fund_management.report_payment_receipts_fund" name="society_fund_management.report_payment_receipts_fund"/>
    <record id="society_fund_management.report_payment_receipts" model="ir.actions.report.xml">
      <field name="paperformat_id" ref="society_fund_management.paper_format_payment_receipts"/>
    </record>
  </data>
</openerp>
