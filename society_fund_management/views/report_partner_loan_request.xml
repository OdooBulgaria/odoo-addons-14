<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="society_fund_management.report_loan_partner_request_document">
      <t t-call="report.external_layout">
        <div class="page">
          <p class="text-center">
            <u>
              <strong>Loan Request Form<br/></strong>
            </u>
          </p>
          <table class="table table-condensed">
            <tbody>
              <tr>
                <td>Req No:<span t-field="o.name"/></td>
                <td>Date:<span t-field="o.date"/></td>
              </tr>
              <tr>
                <td>Acc No:<span t-field="o.partner_id.account_no"/></td>
                <td></td>
              </tr>
              <tr>
                <td>Name:<span t-field="o.partner_id.name"/></td>
                <td></td>
              </tr>
              <tr>
                <td>Address:<span t-field="o.partner_id.street"/></td>
                <td><span t-field="o.partner_id.street2"/></td>
              </tr>
              <tr>
                <td>Mob No:<span t-field="o.partner_id.mobile"/></td>
              </tr>
              <tr>
                <td>I required amount:<span t-field="o.loan_amount"/></td>
                <td>So I request you to provide me above loan amount from existing lavasa socity fund.</td>
              </tr>
              <tr>
                <td>Applier Signature:</td>
                <td>-------------------------</td>
              </tr>
            </tbody>
          </table>
          <br/>
          <p class="text-center">
            <u>
              <strong t-if="o.guarantor_ids">Guarantors Details<br/></strong>
            </u>
          </p>
          <table class="table table-condensed" t-if="o.guarantor_ids">
            <tbody>
              <tr t-foreach="o.guarantor_ids" t-as="g">
                <td>
                  Name:<span t-field="g.name"/>
                </td>
                <td>
                  Acc No:<span t-field="g.account_no"/>
                </td>
                <td>
                  Address:<span t-field="g.street"/>
                  <span t-field="g.street2"/>
                </td>
                <td>
                  Mob No:<span t-field="g.mobile"/>
                </td>
                <td>Guarantors Signature:</td>
                <td>-------------------------</td>
              </tr>
            </tbody>
          </table>
          <br/>
          <p class="text-center">
            <u>
              <strong>Promisory Note:<br/></strong>
            </u>
          </p>
          <table class="table table-condensed">
            <tr>
              <td>
                This is authorize :<span t-field="o.account_id.company_id.name"/>
              </td>
            </tr>
            <tr>
              <td>
                I am writing here as a promising note. My name is
                <span t-field="o.partner_id.name"/>,I am from
                <span t-field="o.partner_id.city"/>.
              </td>
            </tr>
            <tr>
              <td>
                I am taking loan amount:<span t-field="o.loan_amount"/>from you as an cash amount.
              </td>
            </tr>
            <tr>
              <td>
                I will be liable to pay back this amount by agree all terms and condition.This is cleared with date :<span t-field="o.date"/>
              </td>
            </tr>
            <tr>
              <td>
                <td>President Signature:</td>
                <td>--------------------</td>
              </td>
            </tr>
          </table>
        </div>
      </t>
    </template>

    <template id="report_loan_request_form">
      <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
          <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'society_fund_management.report_loan_partner_request_document')"/>
        </t>
      </t>
    </template>

    <report id="report_loan_req_info" string="Loan Request Form" model="fund.loan" report_type="qweb-pdf" file="society_fund_management.report_loan_request_form" name="society_fund_management.report_loan_request_form"/>

  </data>
</openerp>
