<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_order_form_sku">
            <field name="name">view.order.form.sku</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Cancel Quotation']" position="attributes">
                    <attribute name="states">draft,sent,confirm</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,sent,confirm,progress,done</attribute>
                </xpath>

                <xpath expr="//field[@name='name']" position="after">
					<field name="gr_merge_on" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='action_button_confirm']" position="before">
					<button name="action_quotation_confirm" string="Confirm Quotation" type="object" class="oe_highlight" attrs="{'invisible':[('state','not in',['draft','sent'])]}"/>
                </xpath>

                <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="after">
					<field name="remaining_do" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_order_line_tree_inherit_merge">
            <field name="name">view.order.line.tree.inherit</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">		
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" invisible="1"/>
                </xpath>	
                <xpath expr="//field[@name='price_subtotal']" position="after">
                    <field name="remaining_do" invisible="1"/>
                </xpath>				
			</field>
		</record>
	
        <record id="action_order_line_product_draft_tree" model="ir.actions.act_window">
            <field name="context">{}</field><!-- force empty -->
            <field name="name">SOL-Merge DO</field>
            <field name="res_model">sale.order.line</field>
			<field name="view_mode">tree</field>
            <field name="view_id" ref="view_order_line_tree_inherit_merge"/>
			<field name="domain">[('remaining_do','=',False),('state','in',['draft','confirmed'])]</field>
        </record>
		
        <menuitem id="menu_sale_order_line_draft_merge"
                action="action_order_line_product_draft_tree" parent="base.menu_sales"
                sequence="6"/>
    </data>
</openerp>
